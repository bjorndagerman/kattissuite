{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended"
	],
	"plugins": [
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"no-console": "off"
	}
}